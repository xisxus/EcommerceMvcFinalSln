@model IEnumerable<FinalProject.Models.ViewModel.OrderUserVM>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Bill)</th>
                <th>@Html.DisplayNameFor(model => model.Payment)</th>
                <th>@Html.DisplayNameFor(model => model.InvoiceDate)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bill)</td>
                    <td>@Html.DisplayFor(modelItem => item.Payment)</td>
                    <td>@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <span class="btn btn-success">Approve</span>
                    </td>
                    <td>
                        <a href="@Url.Action("Invoice", "Home", new { id = item.InvoiceId })" class="btn btn-primary"
                           onclick="openPrintWindow('@Url.Action("Invoice", "Home", new { id = item.InvoiceId })'); return false;">
                            Print
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script type="text/javascript">function openPrintWindow(url) {
            window.open(url, '_blank');
        }</script>
}

