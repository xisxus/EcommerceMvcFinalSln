@model IEnumerable<FinalProject.Models.Product>

<section>
    <div>
        <div>
            <span class="subheading">Featured Products</span>
            <h2>Our Products</h2>
            <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchBox").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#result .product").each(function () {
                    var text = $(this).find("h3 a").text().toLowerCase();
                    $(this).toggle(text.indexOf(value) > -1);
                });
            });
        });
    </script>

    <div>
        <input type="text" placeholder="Search Here" id="searchBox">
    </div>

  
        @foreach (var item in Model)
        {
                    <div class="col-lg-4 col-md-6 text-center strawberry">
                        <div class="single-product-item">
                            <div class="product-image">
                                <a href="#"><img src="~/Uploads/@item.Image" alt=""></a>
                            </div>
                            <h3>@item.Name</h3>
                            <p class="product-price"><span>Per Kg</span> @item.Unit </p>
                            <a href="@Url.Action("AddtoCart", "Home", new { id = @item.ProductId })" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                        </div>
                    </div>
                }
                </div>

            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="pagination-wrap">
                        <ul>
                            <li><a href="#">Prev</a></li>
                            <li><a href="#">1</a></li>
                            <li><a class="active" href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">Next</a></li>
                        </ul>
                    </div>
                    <div>
                        <a href="#" class="add-to-cart">
                            <span><i class="ion-ios-menu"></i></span>
                        </a>
                        <a href="#" class="buy-now">
                            <span><i class="ion-ios-cart"></i></span>
                        </a>
                        <a href="#" class="heart">
                            <span><i class="ion-ios-heart"></i></span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

